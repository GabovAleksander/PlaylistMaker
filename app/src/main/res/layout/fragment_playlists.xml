<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/layout">

    <Button
        android:id="@+id/button_new_playlist"
        style="@style/updateButton"
        android:text="@string/new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mainMargin"
        android:layout_marginBottom="46dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:src="@drawable/icon_nothing_found"/>

    <TextView
        android:text="@string/no_playlists"
        android:layout_marginHorizontal="@dimen/mainMargin"
        android:textFontWeight="500"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/marginTopBottom"
        style="@style/errMessageText"/>
</LinearLayout>