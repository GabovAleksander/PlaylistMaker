<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutMain">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSizeMenu"
        android:layout_marginTop="@dimen/marginTopBottom"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/mainMargin"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/marginTopBottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSearch"
            android:text="@string/search"
            app:icon="@drawable/icon_magnifier"
            style="@style/mainButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMedia"
            android:text="@string/media"
            app:icon="@drawable/icon_sign"
            style="@style/mainButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSettings"
            android:text="@string/settings"
            app:icon="@drawable/icon_gear"
            style="@style/mainButton"/>
    </LinearLayout>
</LinearLayout>