<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="layoutUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
    </style>
    <style name="buttonBack">
        <item name="android:contentDescription">@string/back</item>
        <item name="android:src">@drawable/icon_arrowback</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="header">
        <item name="android:drawablePadding">@dimen/margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/fontSizeMenu</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/mainMargin</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <!--Экран "Главная" -->
    <style name="layoutMain" parent="layout">
        <item name="android:background">@color/backGround</item>
    </style>
    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginBottom">@dimen/marginTopBottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textSize">@dimen/fontSizeMenu</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <!--Экран "Настройки" -->
    <style name="settingRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_height">@dimen/menuRowHeight</item>
    </style>
    <style name="settingRowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/fontSizeSettingsMenu</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="settingRowImage">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/textGray</item>
    </style>
    <style name="settingSwitch">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:trackTint">@color/lightGray</item>
        <item name="android:thumbTint">@color/textGray</item>
        <item name="tint">@color/textGray</item>
    </style>
    <!--Поиск-->
    <style name="searchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:background">@drawable/search_field</item>
        <item name="android:backgroundTint">@color/lightGray</item>
    </style>
    <style name="editTextSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/search_field</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/lightGray</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:drawableStart">@drawable/icon_magnifier</item>
        <item name="android:drawableTint">@color/textGray</item>
        <item name="android:drawablePadding">@dimen/margin</item>
    </style>
    <style name="searchLayoutImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="tint">@color/textGray</item>
    </style>
</resources>